<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_fp_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ev.approver.FpRegisterActivity"
    tools:showIn="@layout/activity_fp_register">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textSize="@dimen/header_font_size"
        android:textColor="@color/black"
        android:layout_marginTop="128dp"
        android:id="@+id/fp_register_message"
        android:text="@string/fp_register_message"
        android:hint="Enter Pin" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="120dp"
        app:srcCompat="@drawable/ic_fingerprint"
        android:id="@+id/imageView"
        android:background="@color/colorPrimary"
        android:tint="@color/white"
        android:scaleType="fitCenter"
        android:layout_below="@+id/fp_register_message"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp" />


</RelativeLayout>
