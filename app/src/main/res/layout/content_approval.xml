<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:id="@+id/content_approval"
    android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_top_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.ev.approver.ApprovalActivity"
    tools:showIn="@layout/activity_approval"
    android:weightSum="2">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" android:layout_weight="1"
        android:orientation="vertical"
        android:weightSum="2">
        <TextView
            android:text="From : "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fromLabel"
            android:layout_gravity="left"
            android:layout_weight="1"
            />

        <TextView
            android:text="KR-SB1 : Kumar Thangaraj"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:id="@+id/fromAcctDtls"
            android:layout_gravity="end"
            android:textStyle="bold"
            android:textSize="16dp"
            android:textAllCaps="true"
            android:textAlignment="gravity"
            android:layout_weight="3" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" android:layout_weight="1"
        android:orientation="vertical"
        android:weightSum="2">
        <TextView
            android:text="To : "
            android:layout_width="match_parent"
            android:paddingTop="@dimen/activity_min_vertical_margin"
            android:layout_height="wrap_content"
            android:id="@+id/toLabel"
            android:layout_gravity="left"
            android:layout_weight="1"
            />
        <TextView
            android:text="KR-SB2 : Kumar Thangaraj"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:id="@+id/toAcctDtls"
            android:layout_gravity="end"
            android:textStyle="bold"
            android:textSize="16dp"
            android:textAllCaps="true"
            android:textAlignment="gravity"
            android:layout_weight="3" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" android:layout_weight="1"
        android:orientation="vertical"
        android:weightSum="2">
        <TextView
            android:text="Amount : "
            android:layout_width="match_parent"
            android:paddingTop="@dimen/activity_min_vertical_margin"
            android:layout_height="wrap_content"
            android:id="@+id/amountLabel"
            android:layout_gravity="left"
            android:layout_weight="1"
            />
        <TextView
            android:text="USD : 10000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:id="@+id/amount"
            android:layout_gravity="end"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_weight="3" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" android:layout_weight="1"
        android:orientation="vertical"
        android:weightSum="2">
        <TextView
            android:text="Remarks : "
            android:layout_width="match_parent"
            android:paddingTop="@dimen/activity_min_vertical_margin"
            android:layout_height="wrap_content"
            android:id="@+id/remarksLabel"
            android:layout_gravity="left"
            android:layout_weight="1"
            />
        <TextView
            android:text="Transaction Initiated for Settlement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:id="@+id/remarks"
            android:textAllCaps="true"
            android:layout_gravity="end"
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_weight="3" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" android:layout_weight="1"
        android:orientation="vertical"
        android:weightSum="2">
        <TextView
            android:text="Approver Comments : "
            android:layout_width="match_parent"
            android:paddingTop="@dimen/activity_min_vertical_margin"
            android:layout_height="wrap_content"
            android:id="@+id/commentsLabel"
            android:layout_gravity="left"
            android:layout_weight="1"
            />
        <EditText
            android:hint="Comments for Approval/Reject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:id="@+id/approverComments"
            android:layout_gravity="end"
            android:textSize="16dp"
            android:layout_weight="3" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>
    </LinearLayout>
</LinearLayout>